{
  "namespace": "requestofflineauthcode",

  "requestofflineauthcode_screen@common.base_screen": {
    "$screen_content": "requestofflineauthcode.screen_content",
    "force_render_below": true,
    "$fill_alpha": 1
  },

  "screen_content": {
    "type": "panel",
    "controls": [
      {
        "main_panel@common_dialogs.main_panel_one_button": {
          "$text_name": "store.subscription.requestOfflineAuthCodeDialog.title",
          "$button_panel": "requestofflineauthcode.authorize_button",
          "$child_control": "requestofflineauthcode.main_panel_content",
          "size": "$tall_modal_screen_size"
        }
      }
    ]
  },

  "text": {
    "type": "label",
    "size": [ "100%", "default" ],
    "text": "$text",
    "font_scale_factor": 0.8,
    "color": "$store_white_text_color"
  },

  "bullet_point": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": [ "100%", "50%" ],
    "controls": [
      {
        "padding_1": {
          "type": "panel",
          "size": [ "5px", "100%" ]
        }
      },
      {
        "bullet_icon": {
          "type": "stack_panel",
          "orientation": "vertical",
          "size": [ 2.5, "100%" ],
          "controls": [
            {
              "padding": {
                "type": "panel",
                "size": [ "100%", 2.5 ]
              }
            },
            {
              "label_icon": {
                "type": "image",
                "texture": "textures/ui/white",
                "size": [ 2.5, 2.5 ]
              }
            }
          ]
        }
      },
      {
        "padding_2": {
          "type": "panel",
          "size": [ "5px", "100%" ]
        }
      },
      {
        "bullet_text@requestofflineauthcode.text": {
          "$text": "$bullet_text"
        }
      }
    ]
  },

  "main_panel_content": {
    "type": "stack_panel",
    "orientation": "vertical",
    "size": [ "100% - 14px", "100% - 14px" ],
    "controls": [
      {
        "text_panel_1": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "top_text@requestofflineauthcode.text": {
                "$text": "store.subscription.requestOfflineAuthCodeDialog.body.line1"
              }
            }
          ]
        }
      },
      {
        "padding_1": {
          "type": "panel",
          "size": [ "100%", "8px" ]
        }
      },
      {
        "bullet_points_panel": {
          "type": "stack_panel",
          "orientation": "vertical",
          "size": [ "100%", "fill" ],
          "controls": [
            {
              "bullet_point_1@bullet_point": {
                "$bullet_text": "store.subscription.requestOfflineAuthCodeDialog.body.bullet1"
              }
            },
            {
              "bullet_point_2@bullet_point": {
                "$bullet_text": "store.subscription.requestOfflineAuthCodeDialog.body.bullet2"
              }
            }
          ]
        }
      },
      {
        "padding_2": {
          "type": "panel",
          "size": [ "100%", "8px" ]
        }
      },
      {
        "text_panel_2": {
          "type": "panel",
          "size": [ "100%", "100%c" ],
          "controls": [
            {
              "bottom_text@requestofflineauthcode.text": {
                "$text": "store.subscription.requestOfflineAuthCodeDialog.body.line2"
              }
            }
          ]
        }
      }
    ]
  },

  "authorize_button@common_buttons.light_text_button": {
    "$pressed_button_name": "button.authorize",
    "$button_text": "store.subscription.requestOfflineAuthCodeDialog.button.authorize"
  }
}
